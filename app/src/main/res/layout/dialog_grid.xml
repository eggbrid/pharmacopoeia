<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/close"
    android:layout_width="@dimen/width_70px"
    android:src="@drawable/icon_close"
    android:padding="@dimen/width_20px"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:layout_height="@dimen/width_70px" />
    <GridView
        android:id="@+id/items"
        android:layout_marginTop="@dimen/width_20px"
        android:layout_marginLeft="@dimen/width_20px"
        android:layout_marginRight="@dimen/width_20px"
        android:layout_below="@+id/close"
        android:horizontalSpacing="@dimen/width_20px"
        android:verticalSpacing="@dimen/width_20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"></GridView>
</RelativeLayout>