<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/comment_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/width_20px">

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_20px"
                android:layout_marginRight="@dimen/width_20px"
                android:text="为了保证您测试的准确性,请您如实填写一下信息："
                android:textColor="@color/c_333333"
                android:textSize="@dimen/text_30px" />

            <RelativeLayout
                android:layout_width="@dimen/width_600px"
                android:layout_height="@dimen/width_90px"
                android:layout_marginTop="@dimen/width_40px"
                android:background="@drawable/green_line_btn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_name"
                    android:layout_width="@dimen/width_110px"
                    android:layout_height="@dimen/width_90px"
                    android:background="@drawable/green_connerleft_btn"
                    android:padding="10dp"
                    android:src="@drawable/icon_name_w" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/width_20px"
                    android:layout_toRightOf="@+id/icon_name"
                    android:background="@color/tr"
                    android:gravity="left|center_vertical"
                    android:hint="您的姓名是"
                    android:textColor="@color/c_333333"
                    android:paddingLeft="@dimen/width_10px"
                    android:textSize="@dimen/text_28px" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/width_600px"
                android:layout_height="@dimen/width_90px"
                android:layout_marginTop="@dimen/width_96px"
                android:background="@drawable/green_line_btn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_sex"
                    android:layout_width="@dimen/width_110px"
                    android:layout_height="@dimen/width_90px"
                    android:background="@drawable/green_connerleft_btn"
                    android:padding="10dp"
                    android:src="@drawable/icon_sex_w" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/width_20px"
                    android:background="@color/tr"
                    android:gravity="left|center_vertical"
                    android:hint="请选择您的性别"
                    android:textColor="@color/c_333333"
                    android:paddingLeft="@dimen/width_10px"
                    android:textSize="@dimen/text_28px"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/icon_sex" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/width_600px"
                android:layout_height="@dimen/width_90px"
                android:layout_marginTop="@dimen/width_96px"
                android:background="@drawable/green_line_btn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_birthday"
                    android:layout_width="@dimen/width_110px"
                    android:layout_height="@dimen/width_90px"
                    android:background="@drawable/green_connerleft_btn"
                    android:padding="10dp"
                    android:src="@drawable/icon_brithday_w" />

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/width_20px"
                    android:layout_toRightOf="@+id/icon_birthday"
                    android:background="@color/tr"
                    android:gravity="left|center_vertical"
                    android:hint="请选择您的生日"
                    android:textColor="@color/c_333333"

                    android:textSize="@dimen/text_28px"
                    android:paddingLeft="@dimen/width_10px" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/width_600px"
                android:layout_height="@dimen/width_90px"
                android:layout_marginTop="@dimen/width_96px"
                android:background="@drawable/green_line_btn"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_city"
                    android:layout_width="@dimen/width_110px"
                    android:layout_height="@dimen/width_90px"
                    android:background="@drawable/green_connerleft_btn"
                    android:padding="10dp"
                    android:src="@drawable/icon_city_w" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/width_20px"
                    android:layout_toRightOf="@+id/icon_city"
                    android:background="@color/tr"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_28px"
                    android:gravity="left|center_vertical"
                    android:hint="请选择您的所在城市"
                    android:paddingLeft="@dimen/width_10px" />

            </RelativeLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/width_400px"
                android:layout_height="@dimen/width_90px"
                android:layout_marginTop="@dimen/width_60px"
                android:enabled="false"
                android:background="@drawable/btn_green_selector"
                android:text="开始测试"
                android:textColor="@color/white"
                android:textSize="@dimen/text_30px" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>