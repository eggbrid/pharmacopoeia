<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/width_20px"
        android:layout_marginLeft="@dimen/width_20px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_280px"
        android:layout_toLeftOf="@+id/rl" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <View
            android:layout_width="1.5dp"
            android:layout_height="@dimen/width_300px"
            android:layout_centerHorizontal="true"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/width_40px"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/width_20px"
                android:layout_height="@dimen/width_20px"
                android:background="@drawable/icon_green_point" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_green"
                android:textSize="@dimen/text_20px" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>