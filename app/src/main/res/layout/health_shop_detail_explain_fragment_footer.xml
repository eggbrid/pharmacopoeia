<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <View
            android:id="@+id/line1"
            android:layout_alignTop="@+id/text_desc"
android:layout_alignBottom="@+id/text_desc"            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/google_green" />


        <TextView
            android:id="@+id/text_desc"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:text="*如有问题可与企业联系"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/text_24px" />

        <View
            android:id="@+id/line2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/text_desc"
            android:layout_alignBottom="@+id/text_desc"
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/google_green" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/google_green" />
</LinearLayout>