<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />


    <com.pharmacopoeia.view.MainViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_main_bottom" />


    <RelativeLayout
        android:id="@+id/rl_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_90px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <View
            android:id="@+id/tab_top_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/home_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_90px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_yangsheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_90px"
                    android:background="@color/tr"
                    android:drawablePadding="2dip"
                    android:drawableTop="@drawable/other_person_main_activity_menu1_drawable_selector"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:scaleType="matrix"
                    android:text="养生"
                    android:textColor="@color/yz_tab_text_color"
                    android:textSize="@dimen/text_22px" />

                <ImageView
                    android:id="@+id/unread_yangsheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="3dp"

                    android:src="@drawable/icon_red_point"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_diancang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_90px"
                    android:background="@color/tr"
                    android:drawablePadding="2dip"
                    android:drawableTop="@drawable/other_person_main_activity_menu2_drawable_selector"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:scaleType="matrix"
                    android:text="典藏"
                    android:textColor="@color/yz_tab_text_color"
                    android:textSize="@dimen/text_22px" />

                <ImageView
                    android:id="@+id/unread_diancang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_red_point"
                    android:visibility="invisible" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_tiaoyang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_90px"
                    android:background="@color/tr"
                    android:drawablePadding="2dip"
                    android:drawableTop="@drawable/other_person_main_activity_menu3_drawable_selector"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:scaleType="matrix"
                    android:text="调养"
                    android:textColor="@color/yz_tab_text_color"
                    android:textSize="@dimen/text_22px" />

                <ImageView
                    android:id="@+id/unread_tiaoyang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_red_point"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_me"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_90px"
                    android:background="@color/tr"
                    android:drawablePadding="2dip"
                    android:drawableTop="@drawable/other_person_main_activity_menu4_drawable_selector"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:scaleType="matrix"
                    android:text="我的"
                    android:textColor="@color/yz_tab_text_color"
                    android:textSize="@dimen/text_22px" />


                <ImageView
                    android:id="@+id/unread_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_red_point"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>