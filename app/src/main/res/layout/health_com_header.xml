<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pharmacopoeia.view.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/width_100px"
        android:layout_height="@dimen/width_100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/width_20px"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/width_10px"
        android:text="同仁堂"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/text_30px" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="同修仁德,救济养生"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/width_10px"
        android:layout_marginTop="@dimen/width_10px"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/text_22px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/info"
        android:background="@color/line" />
</RelativeLayout>