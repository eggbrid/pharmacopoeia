<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/width_20px">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/width_60px"
        android:layout_height="@dimen/width_60px"
        android:layout_marginRight="@dimen/width_20px"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:singleLine="true"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/text_28px" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nick_name"
        android:layout_marginTop="@dimen/width_10px"
        android:textColor="@color/c_666666"
        android:layout_toRightOf="@+id/avatar"
        android:textSize="@dimen/text_28px" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:textSize="@dimen/text_24px"
        android:textColor="@color/c_999999"
        android:layout_marginTop="@dimen/width_10px"
        android:layout_toRightOf="@+id/avatar" />
</RelativeLayout>